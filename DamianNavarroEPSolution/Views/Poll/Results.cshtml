@model Domain.Poll

<h2>@Model.Title</h2>
<p>Thanks for voting! Here's the current result:</p>

<canvas id="pollChart" width="400" height="200"></canvas>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const ctx = document.getElementById('pollChart').getContext('2d');
    const chart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: @Html.Raw(Json.Serialize(ViewBag.Labels)),
            datasets: [{
                label: 'Votes',
                data: @Html.Raw(Json.Serialize(ViewBag.Votes)),
                backgroundColor: '#E88873',
                borderColor: '#E88873',
                borderWidth: 1
            }]
        },
        options: {
            plugins: {
                legend: {
                    labels: { color: '#F5F5F5' }
                },
                tooltip: {
                    bodyColor: '#F5F5F5',
                    backgroundColor: '#484A47',
                }
            },
            scales: {
                x: {
                    ticks: { color: '#F5F5F5' },
                    grid: { color: 'rgba(255,255,255,0.1)' }
                },
                y: {
                    beginAtZero: true,
                    ticks: { color: '#F5F5F5' },
                    grid: { color: 'rgba(255,255,255,0.1)' }
                }
            }
        }
    });
</script>




