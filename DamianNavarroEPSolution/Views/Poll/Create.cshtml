@model Domain.Poll

<h2>Create a Poll</h2>

<form asp-action="Create" method="post">
    <label>Title</label>
    <input asp-for="Title" class="form-control" />

    <label>Option 1</label>
    <input asp-for="Option1Text" class="form-control" />

    <label>Option 2</label>
    <input asp-for="Option2Text" class="form-control" />

    <label>Option 3</label>
    <input asp-for="Option3Text" class="form-control" />

    <button type="submit">Create Poll</button>
</form>
