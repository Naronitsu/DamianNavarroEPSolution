@model IEnumerable<Domain.Poll>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">📋 All Polls</h2>
        <a asp-controller="Poll" asp-action="Create" class="btn btn-success">
            ➕ Create New Poll
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var poll in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <h5 class="card-title">@poll.Title</h5>
                            <p class="card-text text-muted">
                                Created: @poll.DateCreated.ToShortDateString()
                            </p>
                            <a asp-controller="Poll" asp-action="Vote" asp-route-id="@poll.Id" class="btn btn-primary mt-auto">
                                🗳️ Vote Now
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info mt-4" role="alert">
            There are no polls yet. Be the first to <a asp-action="Create" class="alert-link">create one</a>!
        </div>
    }
</div>
