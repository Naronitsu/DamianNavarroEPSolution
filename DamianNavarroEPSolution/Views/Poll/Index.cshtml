@model IEnumerable<Domain.Poll>
@{
    ViewData["Title"] = "All Polls";
}

<h2 class="mb-4">All Polls</h2>

@if (Model != null && Model.Any())
{
    <div class="row row-cols-1 row-cols-md-2 g-4">
        @foreach (var poll in Model)
        {
            <div class="col">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@poll.Title</h5>
                        <p class="card-text text-muted">Created: @poll.DateCreated.ToShortDateString()</p>
                        <a class="btn btn-primary me-2" asp-controller="Poll" asp-action="Vote" asp-route-id="@poll.Id">Vote Now</a>
                        <a class="btn btn-outline-light" asp-controller="Poll" asp-action="Results" asp-route-id="@poll.Id">View Results</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-muted">No polls available yet.</p>
}
